<Shell
    x:Class="LoginApp.Maui.AppShellMahasiswa"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LoginApp.Maui.ViewsMahasiswa"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="False">

    <FlyoutItem Title="Dashboard Mahasiswa" FlyoutItemIsVisible="False">
        <ShellContent
            Title="Dashboard Mahasiswa"
            ContentTemplate="{DataTemplate views:MahasiswaHomePage}"
            Route="MahasiswaHomePage" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Command="{Binding LogoutCommand}" BackgroundColor="Red" Text="Logout" TextColor="White" FontAttributes="Bold" FontSize="28"/>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>
