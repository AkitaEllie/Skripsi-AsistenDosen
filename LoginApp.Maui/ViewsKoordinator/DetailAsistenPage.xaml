<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Maui.ViewsKoordinator.DetailAsistenPage"
             Title="Detail Asisten Dosen"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20"
                             HorizontalOptions="Fill"
                             VerticalOptions="Start">

            <!-- Nama -->
            <Label Text="{Binding Name}"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#222"
                   HorizontalOptions="Center" />

            <!-- NIM -->
            <Label Text="{Binding Username, StringFormat='NIM: {0}'}"
                   FontSize="22"
                   TextColor="#444"
                   HorizontalOptions="Center" />

            <!-- Prodi -->
            <Label Text="{Binding Prodi, StringFormat='Prodi: {0}'}"
                   FontSize="18"
                   TextColor="#666"
                   HorizontalOptions="Center" />

            <!-- Mata Kuliah -->
            <Label Text="Mata Kuliah yang Diajar:"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#333"
                   Margin="0,30,0,0"
                   HorizontalOptions="Center" />

            <!-- Header Tabel -->
            <Grid ColumnDefinitions="1*,2*,1*"
              Padding="10,10"
              BackgroundColor="#e0e0e0"
              WidthRequest="750"
              Margin="0,10,0,-20">
                <Label Text="Kode MK"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Start"
                   VerticalOptions="Center"
                   Grid.Column="0"/>
                <Label Text="Nama Mata Kuliah"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Start"
                   VerticalOptions="Center"
                   Grid.Column="1"/>
                <Label Text="Kelas"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   Grid.Column="2"/>
            </Grid>

            <CollectionView ItemsSource="{Binding MataKuliahList}"
                            Margin="0,0,0,0"
                            WidthRequest="750">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="4"
                               BackgroundColor="White"
                               CornerRadius="8"
                               HasShadow="True">
                            <Grid ColumnDefinitions="1*,2*,1*">
                                <!-- Kode MK -->
                                <Label Text="{Binding KodeMK}"
                                   FontSize="16"
                                   TextColor="Black"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Start"
                                   Grid.Column="0" />

                                <!-- Nama Mata Kuliah -->
                                <Label Text="{Binding Nama}"
                                   FontSize="16"
                                   TextColor="black"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Start"
                                   Grid.Column="1" />

                                <!-- Kelas -->
                                <Label Text="{Binding Kelas}"
                                   FontSize="16"
                                   TextColor="#555"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   Grid.Column="2" />
                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Tombol Aksi -->
            <HorizontalStackLayout Spacing="35"
                                   Margin="0,30,0,0"
                                   HorizontalOptions="Center">
                <Button Text="PRESENSI"
                        BackgroundColor="#662382"
                        TextColor="White"
                        WidthRequest="180"
                        CornerRadius="8" />

                <Button Text="REKAPITULASI"
                        BackgroundColor="#3366cc"
                        TextColor="White"
                        WidthRequest="180"
                        CornerRadius="8" />

                <Button Text="EVALUASI"
                        BackgroundColor="#2ecc71"
                        TextColor="White"
                        WidthRequest="180"
                        CornerRadius="8" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
